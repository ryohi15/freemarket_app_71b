

.card
  .card__header
    .card__header__logo
      = link_to root_path, class: "card__header__logo__link" do
        = image_tag "logo/logo.png", class: "card__header__logo__link__image"
  .card__main
    .card__main__block
      %p.card__main__block__title
        クレジットカード情報入力
      .card__main__block__form
        = form_tag(pay_card_index_path, method: :post, id: 'charge-form',  name: "inputForm") do
          .form_span
            %span.form-span1  カード番号
            %span.form-span2  必須
          = text_field_tag "number", "", class: "card__main__block__form__number", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
          %br
          .form_span
            %span.form-span1  有効期限
            %span.form-span2  必須
          %select#exp_month{name: "exp_month", type: "text", class: "card__main__block__form__month"}
            %option{value: ""} --
            %option{value: "1"}01
            %option{value: "2"}02
            %option{value: "3"}03
            %option{value: "4"}04
            %option{value: "5"}05
            %option{value: "6"}06
            %option{value: "7"}07
            %option{value: "8"}08
            %option{value: "9"}09
            %option{value: "10"}10
            %option{value: "11"}11
            %option{value: "12"}12
          %span 月
          %br
          %select#exp_year{name: "exp_year", type: "text", class: "card__main__block__form__year"}
            %option{value: ""} --
            %option{value: "2019"}19
            %option{value: "2020"}20
            %option{value: "2021"}21
            %option{value: "2022"}22
            %option{value: "2023"}23
            %option{value: "2024"}24
            %option{value: "2025"}25
            %option{value: "2026"}26
            %option{value: "2027"}27
            %option{value: "2028"}28
            %option{value: "2029"}29
          %span 年
          %br
          .form_span
            %span.form-span1  セキュリティーコード
            %span.form-span2  必須
          = text_field_tag "cvc", "", class: "cvc", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc", class: "card__main__block__form__cvc"
          #card_token
          = submit_tag "追加する", id: "token_submit", class: "card__main__block__form__button"

= render "top/footer"